<%# 注文履歴一覧画面（管理者用） %>
<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <td><%= order.created_at %></td>
      <td><%= order.customer.name %></td>
      <td><%= order.order_products.count %></td>
      <td><%= order.status %></td>
    <% end %>
    <%# 10件ごとにページ切り替え %>
    <%# config/initializers/kaminari_config.rb 入力を確認 %>
    <%= paginate @orders %>
  </tbody>
</table>


