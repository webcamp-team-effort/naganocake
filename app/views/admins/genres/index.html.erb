<h2>ジャンル一覧・追加</h2>

<%= form_for @genre, :url => {:action => :create} do |f| %>
  <div class='row'>
    <div class='col-xs-9 col-md-offset-1'>
    <table class='col-xs-7'>
      <tr class="field row">
        <th><%= f.label :ジャンル %></th>
        <th><%= f.text_field :name %></th>
        <th><%= f.radio_button :is_actived, :true %>有効</th>
        <th><%= f.radio_button :is_actived, :false %>無効</th>
        <th><%= f.submit "追加", class: 'btn btn-info col-xs-12'%></th>
      </tr>
    </table>
<% end %>
	</div>
  </div>
  <div class='row'>
    <div class='col-md-offset-1'>
    　<table>
    	<tr>
      　  <th>ジャンル</th>
      　  <th>状態</th>
      　  <th colspan="1"></th>
		</tr>
	  <div class="genre-box">
	   <% @genres.each do |genre| %>
		<tr>
  		  <td><%= genre.name %></td>
	      <% if genre.is_actived == true %>
  		   <td>有効</td>
  		  <% elsif genre.is_actived == false %>
  		   <td>無効</td>
  		  <% end %>
  		  <td><%= link_to '編集する', edit_admins_genre_path(genre), class: "btn-sm btn-primary edit_genre_#{genre.id}" %></td>
  		</tr>
  	  </div>
	    <% end %>
	 </table>
	</div>
  </div>