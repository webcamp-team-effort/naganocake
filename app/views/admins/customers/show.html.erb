<div class="container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4 text-center">
        <% name = @customer.last_name + @customer.first_name %>
		<h3><%= name %>さんの会員詳細</h3>
		</div>
	</div>
	<div class="row">
        <div class="col-xs-4  col-xs-offset-4 text-center">
            <table class="table table-bordered">
                <tr>
                	<th>顧客ID</th>
                	<td><%= @customer.id %>
                    <% if @customer.deleted_at == nil %>
                        有効会員
                    <% else  %>
                        無効会員
                    </td>
                    <% end %>
                </tr>
                <tr>
                	<th>氏名</th>
                	<td><%= name %></td>
                </tr>
                <tr>
                	<th>フリガナ</th>
                    <% kana_name = @customer.last_kana_name + @customer.first_kana_name %>
                	<td><%= kana_name %></td>
                </tr>
                <tr>
                	<th>郵便番号</th>
                	<td><%= @customer.postcode %></td>
                </tr>
                <tr>
                	<th>住所</th>
                	<td><%= @customer.address %></td>
                </tr>
                <tr>
                	<th>電話番号</th>
                	<td><%= @customer.phone_number %></td>
                </tr>
                <tr>
                	<th>メールアドレス</th>
                	<td><%= @customer.email %></td>
                </tr>
            </table>
        </div>
        <div class="col-xs-4">
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-4">
		</div>
        <div class="col-xs-4">
    		<div class="col-xs-6">
    			<%= link_to "編集する" , edit_admins_customer_path , class:"btn btn-primary" %>
    		</div>
    		<div class="col-xs-6">
    			<%= link_to "注文履歴一覧を見る" , admins_orders_path , class:"btn btn-primary" %>
            </div>
		</div>
		<div class="col-xs-4">
		</div>
	</div>
</div>














