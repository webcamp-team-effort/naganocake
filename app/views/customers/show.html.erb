<div class="container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4">
      <h1>マイページ</h1>
    </div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
		</div>
		<div class="col-xs-6">
		<h1>登録情報
			<%= link_to "編集する" , edit_customer_path , class:"btn btn-primary" %>
			<%= link_to "パスワードを変更する" , edit_customer_registration_path , class:"btn btn-primary" %></h1>
		</div>
		<div class="col-xs-3">
		</div>
	</div>
</div>
<div class="container">
    <div class="row">
		<div class="col-xs-3">
		</div>
		<div class="col-xs-6">
			<table class='table'>
				<tr>
				    <th>氏名</th>
				    <th><%= @customer.last_name %>
				    	<%= @customer.first_name %>
				    </th>
			    </tr>
			    <tr>
				    <th>カナ</th>
				    <th><%= @customer.last_kana_name %>
				    	<%= @customer.first_kana_name %>
				    </th>
			    </tr>
			    <tr>
				    <th>郵便番号</th>
				    <th><%= @customer.postcode %>
				    </th>
			    </tr>
			    <tr>
				    <th>住所</th>
				    <th><%= @customer.address %>
				    </th>
			    </tr>
			    <tr>
				    <th>電話番号</th>
				    <th><%= @customer.phone_number %>
				    </th>
			    </tr>
			    <tr>
				    <th>メールアドレス</th>
				    <th><%= @customer.email %>
				    </th>
			    </tr>
			</table>
		</div>
		<div class="col-xs-3">
		</div>
	</div>
</div>
<div class="container">
    <div class="row">
    	<div class="col-xs-3">
		</div>
		<div class="col-xs-6">
		<h2> 配送先 <%= link_to "一覧を見る" , deliveries_path , class:"btn btn-primary" %> </h2>
		<h2> 注文履歴 <%= link_to "一覧を見る" , orders_path , class:"btn btn-primary" %> </h2>
		</div>
		<div class="col-xs-3">
		</div>
	</div>
</div>

