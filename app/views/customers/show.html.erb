<div class="container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4 text-center">
      <h3>マイページ</h3>
    </div>
	</div>
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4 text-center">
			<h4>登録情報</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 col-xs-offset-4 space text-center">
				<h4><%= link_to "編集する" , edit_customer_path , class:"btn btn-primary" %></h4>
		</div>
		<div class="col-xs-2 space">
			<h4><%= link_to "パスワードを変更する" , edit_customer_registration_path , class:"btn btn-primary" %></h4>
		</div>
	</div>
	<div class="row">
	    <div class="col-xs-6 col-xs-offset-3">
			<table class='table table-bordered font'>
				<tr>
				    <th>氏名</th>
				    <th><%= @customer.last_name %>
				    	<%= @customer.first_name %>
				    </th>
			    </tr>
			    <tr>
				    <th>カナ</th>
				    <th><%= @customer.last_kana_name %>
				    	<%= @customer.first_kana_name %>
				    </th>
			    </tr>
			    <tr>
				    <th>郵便番号</th>
				    <th><%= @customer.postcode %>
				    </th>
			    </tr>
			    <tr>
				    <th>住所</th>
				    <th><%= @customer.address %>
				    </th>
			    </tr>
			    <tr>
				    <th>電話番号</th>
				    <th><%= @customer.phone_number %>
				    </th>
			    </tr>
			    <tr>
				    <th>メールアドレス</th>
				    <th><%= @customer.email %>
				    </th>
			    </tr>
			</table>
		</div>
		</div>
	</div>
	<div class="container">
	    <div class="row">
			<div class="col-xs-2  col-xs-offset-4">
				<h4> 配送先 </h4>
			</div>
			<div class="col-xs-2">
				<%= link_to "一覧を見る" , deliveries_path , class:"btn btn-primary" %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-2 col-xs-offset-4">
				<h4> 注文履歴 </h4>
			</div>
			<div class="col-xs-2">
			   <%= link_to "一覧を見る" , orders_path , class:"btn btn-primary" %>
			</div>
		</div>
	</div>
</div>


