<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.label :姓 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :名 %>
    <%= f.text_field :first_name　 %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.label :セイ %>
    <%= f.text_field :last_kana_name %>
    <%= f.label :メイ %>
    <%= f.text_field :first_kana_name %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号(ハイフンなし) %>
    <%= f.number_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号(ハイフンなし) %>
    <%= f.number_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :パスワード(6文字以上) %>
    <%= f.password_field :encrypted_password %>
  </div>

  <div class="field">
    <%= f.label :パスワード(確認用) %><br />
    <%= f.password_field :encrypted_password %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2> すでに登録済みの方　</h2>
<p><%= link_to "こちら" , new_customer_session_path %>
   からログインしてください</p>