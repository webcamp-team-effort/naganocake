
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h3>パスワードを変更する</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
              <%= f.label :メールアドレス , class:"font" %>
            </div>
            <div class="col-xs-6">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"space form-control" %>
            </div>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
              <%= f.label :現在のパスワード , class:"font" %>
            </div>
            <div class="col-xs-6">
              <%= f.password_field :password, autocomplete: "new-password" ,class:"space form-control" %>
            </div>
          </div>
          <% if @minimum_password_length %>
          <% end %>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
              <%= f.label :新しいパスワード , class:"font" %>
            </div>
            <div class="col-xs-6">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"space  form-control" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
              <%= f.label :新しいパスワード（確認用） , class:"font" %>
            </div>
            <div class="col-xs-6">
              <%= f.password_field :current_password, autocomplete: "current-password" ,class:"space  form-control" %>
            </div>
          </div>
        </div>

        <div class="actions">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
              <%= f.submit "変更する" ,class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
          <%= link_to "戻る", :back %>
        </div>
      </div>
    </div>
  </div>
</div>
