<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h3>登録情報編集</h3>
  </div>
  <div class="col-xs-8 col-xs-offset-2">

  <%= form_for(@customer) do |f| %>

    <div class="field">
      <div class="row">
        <div class="col-xs-2 space">
          <%= f.label :名前 , class:"font" %>
        </div>
        <div class="col-xs-2 space text-right">
          <%= f.label :（姓） , class:"font" %>
        </div>
        <div class="col-xs-3 space">
          <%= f.text_field :last_name , class:"form-control" %>
        </div>
        <div class="col-xs-2 space text-right">
          <%= f.label :（名）, class:"font" %>
        </div> 
        <div class="col-xs-3 space">
          <%= f.text_field :first_name , class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="col-xs-2 space">
          <%= f.label :フリガナ , class:"font" %>
        </div>
        <div class="col-xs-2 space text-right">
          <%= f.label :（セイ） , class:"font" %>
        </div>
        <div class="col-xs-3 space">
          <%= f.text_field :last_kana_name , class:"form-control" %>
        </div>
        <div class="col-xs-2 space text-right">
          <%= f.label :（メイ） , class:"font" %>
        </div>
        <div class="col-xs-3 space">
          <%= f.text_field :first_kana_name , class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="col-xs-4 space">
          <%= f.label :メールアドレス , class:"font" %>
        </div>
        <div class="col-xs-4 space">
          <%= f.email_field :email , class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="col-xs-4 space">
          <%= f.label :郵便番号（ハイフンなし）, class:"font" %>
        </div>
        <div class="col-xs-4 space">
          <%= f.text_field :postcode , class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="col-xs-4 space">
          <%= f.label :住所 , class:"font" %>
        </div>
        <div class="col-xs-8 space">
          <%= f.text_field :address , class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="col-xs-4 space">
          <%= f.label :電話番号（ハイフンなし）, class:"font" %>
        </div>
        <div class="col-xs-4 space">
          <%= f.text_field :phone_number , class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="row">
        <div class="col-xs-4">
          <%= f.submit "編集内容を保存する" , class:"btn btn-primary" %>
        </div>
        <div class="col-xs-2">
          <%= link_to "退会する" , customers_confirm_path , class:"btn btn-danger" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
