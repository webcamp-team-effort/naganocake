<h2>ショッピングカート</h2>
 <div class='col-md-offset-8'>
 	<%= link_to '削除する', cart_items_empty_path, method: :delete, class: "btn-sm btn-danger"%>
 	 </div>
   <table>
	<tr>
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th colspan="3"></th>
	</tr>
	<% array = [] %>
		<% @cart_items.each do |cart_item| %>
	    	<tr>

	    		<% 	a = cart_item.product.tax_included_price.to_f
					b = 1.1.to_f
					tax_included = "#{a*b}".to_i
					sub_price = tax_included * cart_item.quantity
					array << sub_price %>

	  			<th><%= attachment_image_tag cart_item.product, :image, class: "img-square", fallback: "no_image.jpg", size:"80x45" %><%= cart_item.product.name %></th>
				<th><%= tax_included.to_s(:delimited) %></th>
				<%= form_for cart_item do |f| %>
				<th><%= f.text_field :quantity %><%= f.submit "変更", class: 'btn btn-info'%></th>
				<th><%= sub_price.to_s(:delimited) %></th>
				<% end %>
				<th><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn-sm btn-danger"%></th>
	    	</tr>
<% end %>
</table>
 <div class='col-md-offset-1'>
 	<%= link_to '買い物を続ける', products_path, class: "btn btn-primary"%>
 </div>
 <div class='col-md-offset-8'>
 	<%= array.sum.to_s(:delimited) %>
 </div>
 <div>
 	<%= link_to '情報入力に進む', new_order_path, class: "btn btn-lg btn-success"%>
 </div>