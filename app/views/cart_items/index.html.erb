<h2>ショッピングカート</h2>
   <table>
	<tr>
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th colspan="3"></th>
	</tr>
   </table>


<% @cart_items.each do |cart_item| %>
	   <table>
  		    <tr>
    		  <th><%= attachment_image_tag cart_item.product, :image, class: "img-square", fallback: "no_image.jpg", size:"160x90" %>¥<%= cart_item.product.tax_included_price.to_s(:delimited) %></th>
   			  <th><%= cart_item.quantity %></th>
   		    </tr>
	       </table>
<% end %>