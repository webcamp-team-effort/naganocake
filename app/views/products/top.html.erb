<div class="container">
  <div class='row'>
    <div class='col-xs-2'>
			<table class="list-group">
				<h3>ジャンル検索</h3>
					<% @genres.each do |genre| %>
						<tr>
							<% if genre.is_actived == true %>
								<td class="list-group-item"><%= link_to  products_path(:genre_id => genre.id) do %><%= genre.name %><% end %></td>
							<% end %>
						</tr>
					<% end %>
			</table>
    </div>
		<div class='col-xs-8'>
			<div>
				<div>
					<img alt="Brand" src="/assets/naganocake.png" style="height: 380px;">
				</div>
				<% unless customer_signed_in? %>
					<div>
						<p>ようこそ、ながのCAKEへ！</p>
						<p>このサイトは、ケーキ販売のECサイトになります。</p>
						<p>会員でない方も商品の閲覧はできますが、</p>
						<p>購入には会員登録が必要となります。</p>
					</div>
				<% end %>
			</div>
			<h2>おすすめ商品</h2>
				<% @products.each do |product| %>
					<% if product.on_sale == true %>
						<table class='col-xs-3'>
							<tr>
								<th>
									<%= link_to  product_path(product.id) do %>
										<%= attachment_image_tag product, :image, class: "img-square", fallback: "no_image.jpg", size:"160x90" %>
									<% end %>
								</th>
							</tr>
							<tr>
								<th>
									<%= link_to  product_path(product.id) do %>
										<%= product.name %>
									<% end %>
								</th>
							<tr>
								<th>¥<%= product.tax_included_price.to_s(:delimited) %></th>
							</tr>
						</table>
					<% end %>
				<% end %>
		</div>
	</div>
	<div class='col-md-offset-8'>
		<%= link_to 'もっと見る>', products_path %>
	</div>
</div>
