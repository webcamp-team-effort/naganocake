<%# 注文履歴詳細（顧客側） %>
<h2>注文履歴詳細</h2>

<h4>注文情報</h4>
<table class="table">
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        <%= @order.send_postcode %><%= @order.send_address %><br>
        <%= @order.send_name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<h4>請求情報</h4>
<table class="table">
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= (@order.total_price - @order.postage) %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.posatage %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_price %></td>
    </tr>
  </tbody>
</table>

<h4>注文内容</h4>
<table class="table">

  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_products.each do |order_product| %>
      <tr>
        <td><%= order_product.name %></td>
        <td><%= order_product.price %></td>
        <td><%= order_product.quantity %></td>
        <td><%= (order_product.price * 1.1 * order_product.quantity).floor %></td>
      </tr>
    <% end %>
  </tbody>
</table>