<%# 注文確認画面 %>
<h2>注文情報確認</h2>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.cart_items.each do |cart_item| %>
      <td>
        <%= attachment_image_tag order_product.product, :image, class: "img-square", fallback: "no_image.jpg", size:"40x40" %>
        <%= cart_item.product.name %>
      </td>
      <td><%= (cart_item.product.tax_included_price * 1.1).floor %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= (cart_item.product.tax_included_price * 1.1 * cart_item.quantity).floor %></td>
    <% end %>
  </tbody>
</table>

<table class="table">
  <tbody>
    <tr>
      <td>送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <%# orderモデルにて計算式を記述 %>
      <td><%= @order.calculation(@customer) %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td><%= @order.calculation(@customer) + @order.postage %></td>
    </tr>
  </tbody>
</table>

<table>
  <tr>
    <th>お支払い方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td>
      <%= @order.send_postcode %><%= @order.send_address %><br>
      <%= @order.send_name %>
    </td>
  </tr>
</table>

<%= form_with(model:@order, url: orders_path, local: true) do |f| %>
  <%# hidden field %>
  <%# orederの各パラメータ、そこに@order.xxxを格納します。 %>
  <%# <%= f.hidden_field :calculation, :value => @order.calculation(@customer) %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :send_postcode, :value => @order.send_postcode %>
  <%= f.hidden_field :send_address, :value => @order.send_address %>
  <%= f.hidden_field :send_name, :value => @order.send_name %>
  <div class="field">
    <%= f.submit "購入を確定する", class: 'btn btn-success btn-block' %>
  </div>
<% end %>
