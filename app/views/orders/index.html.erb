<%# 注文履歴一覧画面（顧客用） %>
<h2 class="">注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr class="">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr class="">
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= "〒" + order.send_postcode + " " + order.send_address + "" + order.send_name %></td>
        <td>
          <% order.order_products.each do |order_product| %>
            <%= order_product.product.name %>
          <% end %>
        </td>
        <td><%= order.total_price %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-lg btn-success ml-auto" %></td>
      </tr>
    <% end %>
  </tbody>
</table>