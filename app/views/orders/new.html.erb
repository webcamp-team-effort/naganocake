<%# 新規注文画面（支払い方法選択＋お届け先選択） %>
<h2>注文情報入力</h2>

<%# 支払方法選択 %>
<h2>支払方法</h2>
<%= form_with(model: order, local: true) do |f| %>
  <%= f.radio_button :payment_method, :0 %>
  <%= f.label :payment_method, "クレジットカード", {value: :0, style: "display: inline-block;"} %>
  <%= f.radio_button :payment_method, :1 %>
  <%= f.label :payment_method, "銀行振込", {value: :1, style: "display: inline-block;"} %>
<% end %>

<%# お届け先選択 %>
<h2>お届け先</h2>
<input type="radio" name="sample" value="0">ご自身の住所
<input type="radio" name="sample" value="1">登録済住所から選択
<input type="radio" name="sample" value="2">新しいお届け先

