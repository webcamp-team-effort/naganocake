<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class='nav navbar-nav navbar-left' >
          <span>naganocake</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
              <li><%= link_to 'マイページ', class: 'glyphicon glyphicon-home home' %></li>
              <li><%= link_to '商品一覧', class: 'glyphicon glyphicon-user users' %></li>
              <li><%= link_to 'カート', booksclass: 'glyphicon glyphicon-book books'%></li>
              <li><%= link_to 'ログアウト', method: :delete,class: 'glyphicon glyphicon-log-out logout' %></li>
            <% else %>
              <li><%= link_to '商品一覧',root_path, class: 'glyphicon glyphicon-home home' %></li>
              <li><%= link_to '新規登録', class: 'glyphicon glyphicon-edit sign_up' %></li>
              <li><%= link_to 'ログイン', class: 'glyphicon glyphicon-log-in sign_in'%></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
